/* pages/map/map.wxss */
map{
  width: 100%;
  height: 100%;
}

.btn{
  width: 600rpx;
  height: 60rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  color: #666;

  background-color: rgba(255,255,255,0.7);
  border-radius: 30rpx;
  box-shadow: 1rpx 1rpx 2rpx 2rpx rgba(0,0,0,0.4);
  
  position: fixed;
  top: 10%;
  right: 0;
  left: 0;
  margin:auto;

  z-index: 999;
}
.icon{
  width: 40rpx;
  height:40rpx;

  position: absolute;
  left:30rpx;
  top:10rpx;
}