.bg{
  height: 560rpx; 
  /* background: color image repeat posistion/size;  */
  background: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1582610544530&di=a32377f97249d0fb4793594a51204775&imgtype=0&src=http%3A%2F%2Fhbimg.b0.upaiyun.com%2F9af8cd50894b05a5a25a410428deadaa669dab68b9eb-kzIW5Y_fw658) no-repeat center center/cover;

  /* flex布局 */
  display: flex;
  /* 更改主轴方向 */
  flex-direction: column;
  /* 主轴居中 */
  justify-content: center;
  /* 交叉轴居中 */
  align-items: center;
}
/* 用户头像 */
.icon{
  width: 150rpx;
  height: 150rpx;
  /* 圆角属性 */
  border-radius: 50%;
  overflow: hidden;
}
.username{
  margin-top: 20rpx;
}

/* 设备信息 begin */
.system{
  background-color:white;
  padding-top: 40rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.info{
  font-size: 28rpx;
  color: #999;
}

.setting,.system>view{
  padding: 20rpx 0;
  border-top: 1px solid #ddd;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
}
.city{
  color: #999;
}
.city>open-data{
  margin-left: 10rpx;
}

.setting>text:last-child,.system>view>text:last-child{
  color: #999;
}
.setting{
  margin-top: 40rpx;
  background-color: white;
  border:none;
  padding-left: 20rpx;
}
